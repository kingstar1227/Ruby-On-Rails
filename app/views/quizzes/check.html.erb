<h2>Test Result</h2>
<p> <%= @result%> / <%= @question_count %> </p>

<% if @failures %>

  <% @failures.each do |fail|%>
  <div class="row">
  <div class="col-md-1">Question:</div>
  <div class="col-md-3"><%= fail[:question]%> </div>
  <div class="col-md-1">  Your answer:</div>
  <div class="col-md-3"><%= fail[:user_answer]%> </div>
  <div class="col-md-1">R ight answer: </div>
  <div class="col-md-3"> <%= fail[:right_answer] %> </div>
  </div>
  <%end%>
<% end %>

<%= link_to 'Back to unit', unit_path(@unit.id) %>
