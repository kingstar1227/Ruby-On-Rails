<p id="notice"><%= notice %></p>

<h1>Listing Units</h1>

<table class="table">
 <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
</thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= link_to unit.name, unit %></td>
        <td><%= render 'unit_subscriptions/form', unit: unit, user: current_user %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unit', new_unit_path, class: "btn btn-default" %>
